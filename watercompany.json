{
  "swagger" : "2.0",
  "info" : {
    "description" : "Fuse TP3 Demo - The Water Company API",
    "version" : "1.0.0",
    "title" : "Water Company API"
  },
  "host" : "watercompanyrest-tp3demo.4b63.pro-ap-southeast-2.openshiftapps.com",
  "basePath" : "/",
  "tags" : [ {
    "name" : "admins",
    "description" : "Secured Admin-only calls"
  }, {
    "name" : "developers",
    "description" : "Operations available to regular developers"
  } ],
  "schemes" : [ "http" ],
  "paths" : {
    "/payment" : {
      "post" : {
        "tags" : [ "developers" ],
        "summary": "Payment",
        "description": "Place payment request",
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "parameters": [{
            "name": "paymentinfo",
            "in": "body",
            "description": "Payment details",
            "required" : true,
            "schema": {
              "$ref": "#/definitions/Payment"
            }
          }],
        "responses" : {
          "200": {
            "description": "Payment Done",
            "schema": {
              "$ref": "#/definitions/account"
            }
          },
          "400": {
            "description": "error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
        
      }
    },
    "/balance": {
      "get": {
        "tags" : [ "developers" ],
        "consumes" : [ "application/json" ],
        "produces" : [ "application/json" ],
        "summary": "Balance of the account",
        "description": "Remaining balance of the user",
        "responses": {
          "200": {
            "description": "Balance successfully returned.",
            "schema": {
              "$ref": "#/definitions/account"
            }
          },
          "400": {
            "description": "Balance not found",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "parameters": [
        {
          "name": "sender",
          "in": "query",
          "description": "Identification name",
          "required": true,
          "type": "string"
        }
      ]
    }
  },
  "definitions" : {
    "Error": {
      "required": [
        "description",
        "errorcode"
      ],
      "properties": {
        "errorcode": {
          "description": "Error Code",
          "type": "integer"
        },
        "description": {
          "description": "Reason of failure",
          "type": "string"
        }
      }
    },
    "account": {
      "required": [
        "accountid",
        "balance"
      ],
      "properties": {
        "accountid": {
          "description": "Sender name",
          "type": "string"
        },
        "balance": {
          "description": "Remaining balance",
          "type": "integer"
        }
      }
    },
    "Payment": {
      "required": [
        "amount",
        "senderid"
      ],
      "properties": {
        "senderid": {
          "description": "Sender name",
          "type": "string"
        },
        "amount": {
          "description": "Amount to pay",
          "type": "integer"
        }
      }
    }
  }
}
